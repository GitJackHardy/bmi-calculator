<body>
    <div class="container">
        <h2>BMI 计算器</h2>
        <form id="bmiForm">
            <label for="height">身高 (cm):</label>
            <input type="number" id="height" name="height" required><br>
            <label for="weight">体重 (kg):</label>
            <input type="number" id="weight" name="weight" required><br>
            <button type="submit">体重指数</button>
        </form>
        <div class="result" id="result">
            <!-- BMI calculation result will be displayed here -->
        </div>
    </div>

    <script>
        // JavaScript for BMI calculation using WHO standards
        document.getElementById('bmiForm').addEventListener('submit', function(event) {
            event.preventDefault();
            calculateBMI();
        });

        function calculateBMI() {
            var height = parseFloat(document.getElementById('height').value);
            var weight = parseFloat(document.getElementById('weight').value);

            if (height > 0 && weight > 0) {
                var bmi = weight / ((height / 100) * (height / 100));
                var bmiResult = "您的体重指数（BMI）为 " + bmi.toFixed(1) + "。" + "<br>";
                var suggestion = "";

                if (bmi < 18.5) {
                    suggestion = "不足18.5，太瘦了，建议增加营养。";
                } else if (bmi >= 18.5 && bmi < 24.9) {
                    suggestion = "介于18.5和25之间，完美，请继续保持。";
                } else if (bmi >= 24.9 && bmi < 29.9) {
                    suggestion = "介于25和30之间，已经超重了，需警惕，建议改变饮食结构，增加运动量。";
                } else {
                    suggestion = "超过30，体重过大，已达肥胖标准，健康问题风险明显增加，建议控制饮食总量，增加运动消耗，必要时需就医咨询。";
                }

                var idealWeightMin = 18.5 * ((height / 100) * (height / 100));
                var idealWeightMax = 24.9 * ((height / 100) * (height / 100));
                var idealWeightRange = "根据您的身高，理想体重的范围应该是 " + idealWeightMin.toFixed(1) + "kg - " + idealWeightMax.toFixed(1) + "kg.";

                document.getElementById('result').innerHTML = bmiResult + suggestion + "<br>" + idealWeightRange;
            } else {
                alert("请输入正确的身高和体重");
            }
        }
    </script>
</body>
</html>
